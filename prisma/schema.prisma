generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")   // ← ЭТА СТРОКА ОБЯЗАТЕЛЬНА!
}

model User {
  id           String   @id @default(uuid())
  uid          String   @unique
  role         String   // "B2C" или "B2B"
  email        String   @unique
  name         String?
  phone        String?
  pushToken    String?
  experience   String?
  isHot        Boolean  @default(false)
  aiScore      Int      @default(80)
  address      String?
  shiftsCreated Shift[]
  applications Application[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Shift {
  id           String   @id @default(uuid())
  role         String
  establishment String
  address      String
  startTime    DateTime
  endTime      DateTime?
  pay          Int
  description  String?
  status       String   @default("OPEN")
  creatorId    String
  creator      User     @relation("Creator", fields: [creatorId], references: [id])
  applications Application[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Application {
  id        String   @id @default(uuid())
  shiftId   String
  shift     Shift    @relation(fields: [shiftId], references: [id], onDelete: Cascade)
  seekerId  String
  seeker    User     @relation(fields: [seekerId], references: [id])
  status    String   @default("PENDING")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([shiftId, seekerId])
}